@page
@model Chef_sTable.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/auth.css" />

<img src="~/img/chef-logo.png" class="logo-login">


<div class="auth-container">
    <div style="color: #8B4513" ; class="auth-card">
    
        <h2>Entrar</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center"></div>

        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger text-center">
                @ViewData["Error"]
            </div>
        }

        @if (TempData["RegistroSuccess"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["RegistroSuccess"]
            </div>
        }

        <form method="post">

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input asp-for="Senha" type="password" class="form-control" />
            </div>

            <button style="background-color: #ff6a00"; type="submit" class="btn btn-primary w-100 mt-3">
                Entrar
            </button>

            <div class="text-center mt-3">
                <a asp-page="/Auth/Register">Criar conta</a>
            </div>

        </form>

    </div>
</div>