@page
@model Chef_sTable.Pages.Usuarios.DetailsModel

@{
    ViewData["Title"] = "Meu Perfil";
}

<link rel="stylesheet" href="~/css/minhas-receitas.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-body text-center">

                    <img src="https://i.pravatar.cc/150"
                         class="rounded-circle mb-3 avatar-perfil"
                         alt="Avatar"
                         width="120"
                         height="120" />

                    <h4 class="mb-1">@Model.Usuario.Nome</h4>
                    <p class="text-muted mb-3">@Model.Usuario.Email</p>

                    <hr />

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-page="./Edit"
                           asp-route-id="@Model.Usuario.Id"
                           class="btn btn-outline-primary btn-sm">
                            Editar perfil
                        </a>

                        <a asp-page="/Index"
                           class="btn btn-outline-secondary btn-sm">
                            Voltar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="container mt-5">

    <h3 class="mb-4 text-center">
        Minhas Receitas
    </h3>

    @if (Model.Receita != null && Model.Receita.Any())
    {
        <section class="lista-receitas">

            @foreach (var item in Model.Receita)
            {
                var capa = item.Fotos?.FirstOrDefault();

                <div class="card-receita">

                    <a asp-page="/Receitas/Details"
                       asp-route-id="@item.Id"
                       class="card-link">

                        <!-- CAPA -->
                        <img src="@(capa?.Url ?? "/img/sem-foto.jpg")"
                             class="card-img" />

                        <div class="card-body">

                            <!-- AUTOR -->
                            <div class="card-autor">
                                <img src="/img/avatar-padrao.png"
                                     class="autor-avatar" />
                                <span class="autor-nome">
                                    @item.Usuario?.Nome
                                </span>
                            </div>

                            <h3>@item.Titulo</h3>

                            <p class="card-descricao">
                                @item.Descricao
                            </p>

                            <span class="card-info">
                                ⏱ @item.TempoPreparo min · ⚙ @item.Dificuldade
                            </span>

                        </div>
                    </a>

                    <div class="card-acoes">
                        <a asp-page="/Receitas/Edit"
                           asp-route-id="@item.Id"
                           class="btn-editar">
                            Editar
                        </a>

                        <a asp-page="/Receitas/Delete"
                           asp-route-id="@item.Id"
                           class="btn-deletar">
                            Deletar
                        </a>
                    </div>

                </div>
            }

        </section>
    }
    else
    {
        <div class="text-center text-muted mt-4">
            <p>😢 Você ainda não publicou nenhuma receita.</p>

            <a asp-page="/Receitas/Create"
               class="btn btn-outline-success btn-sm mt-2">
                Criar minha primeira receita
            </a>
        </div>
    }
</div>
    
