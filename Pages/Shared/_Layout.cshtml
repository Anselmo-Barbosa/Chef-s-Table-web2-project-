<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chef_sTable</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chef_sTable.styles.css" asp-append-version="true" />
</head>
<body>

    @{
        var usuarioNome = Context.Session.GetString("UsuarioNome");
        var path = Context.Request.Path.Value?.ToLower() ?? "";
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand" asp-page="/Index">Chef_sTable</a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- ÁREA DE LOGIN / USUÁRIO -->
                    <div class="d-flex align-items-center">

                        @if (usuarioNome != null)
                        {
                            <span class="me-3">
                                Olá, <strong>@usuarioNome</strong>
                            </span>
                            <a class="btn btn-outline-danger btn-sm"
                               asp-page="/Auth/Logout">
                                Sair
                            </a>
                        }
                        else if (!path.Contains("/auth/login"))
                        {
                            <a class="btn btn-outline-primary btn-sm"
                               asp-page="/Auth/Login">
                                Entrar
                            </a>
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Chef_sTable - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>