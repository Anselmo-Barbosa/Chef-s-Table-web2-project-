@page
@model Chef_sTable.Pages.Receitas.IndexModel

<link rel="stylesheet" href="~/css/receita-cards.css" />

<div class="topo-acoes">
    <a asp-page="Create" class="btn-criar">+ Criar nova receita</a>
</div>

<section class="lista-receitas">

@foreach (var item in Model.Receita)
{
    var capa = item.Fotos?.FirstOrDefault();

        <div class="card-receita">

            <a asp-page="./Details" asp-route-id="@item.Id" class="card-link">

                <!-- CAPA -->
                <img src="@(capa?.Url ?? "/img/sem-foto.jpg")"
                     class="card-img" />

                <div class="card-body">

                    <!-- AUTOR -->
                    <div class="card-autor">
                        <img src="/img/avatar-padrao.png" class="autor-avatar" />
                        <span class="autor-nome">
                            @item.Usuario?.Nome
                        </span>
                    </div>

                    <h3>@item.Titulo</h3>

                    <p class="card-descricao">
                        @item.Descricao
                    </p>

                    <span class="card-info">
                        ⏱ @item.TempoPreparo min · ⚙ @item.Dificuldade
                    </span>

                </div>
            </a>

            <div class="card-acoes">
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn-editar">Editar</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn-deletar">Deletar</a>
            </div>

        </div>
}
